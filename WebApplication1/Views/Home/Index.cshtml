<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destiny 2 Exotic Tracker</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Main.css" rel="stylesheet" />
</head>
<body ng-app="App" ng-controller="mainController as ctrl" data-ng-init="ctrl.init()">
    
    <h1>Exotic Weapons and Armor</h1>
    <script type="text/ng-template" id="tpl.html">
        <div class="popover-content">
            <div>
                <div>
                    <span>{{item.name}}</span>
                </div>
                <div>{{item.description}}</div>
            </div>
        </div>
    </script>
    <button popover-trigger="mouseenter" popover-placement="bottom" uib-popover-template="'tpl.html'" data-content="Link 1 content...">Hunter Armor</button>
    <button popover="WEALROCK" popover-trigger="mouseenter" popover-placement="right" data-content="eeeee">Warlock Armor</button>
    <button>Weapons</button>
    <h2>Weapons</h2>
    <span ng-repeat="item in ctrl.weaponList">
        <img uib-popover class="item inactive" 
             ng-click="ctrl.toggle(item)" 
             ng-src="{{item.image}}" 
             popover-trigger="'mouseenter'" 
             popover-placement="bottom" 
             uib-popover-template="'tpl.html'"
             ng-class="{'active': item.active}"
        />
    </span>
    <h2>Hunter</h2>
    <span ng-repeat="item in ctrl.hunterList">
        <img class="item inactive" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="!item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
        <img class="item active" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
    </span>
    <h2>Warlock</h2>
    <span ng-repeat="item in ctrl.warlockList">
        <img class="item inactive" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="!item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
        <img class="item active" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
    </span>
    <h2>Titan</h2>
    <span ng-repeat="item in ctrl.titanList">
        <img class="item inactive" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="!item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
        <img class="item active" ng-mouseover="ctrl.showMouseover(item)" ng-mouseleave="ctrl.hideMouseover(item)" ng-if="item.active" ng-click="ctrl.toggle(item)" ng-src="{{item.image}}" />
    </span>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-cookies.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/App/Data/Hunter.js"></script>
    <script src="~/App/Data/Titan.js"></script>
    <script src="~/App/Data/Warlock.js"></script>
    <script src="~/App/Data/Weapons.js"></script>
    <script src="~/App/angular.module.js"></script>
</body>
</html>
